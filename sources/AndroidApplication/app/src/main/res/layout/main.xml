<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/AbsoluteLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
 >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="115dp"
        android:layout_y="128dp"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <SeekBar
        android:id="@+id/seekBarTuner"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_x="2dp"
        android:layout_y="82dp"
        android:minHeight="40dp" />

    <TextView
        android:id="@+id/TitleText"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:layout_x="88dp"
        android:layout_y="0dp"
        android:text="Remote Control"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFF66" />

    <SeekBar
        android:id="@+id/SeekBarFineTuner"
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="224dp"
        android:minHeight="40dp" />

    <TextView
        android:id="@+id/FineText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="112dp"
        android:layout_y="195dp"
        android:text="Fine Tune"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFF66" />

    <TextView
        android:id="@+id/TuneText"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_x="127dp"
        android:layout_y="49dp"
        android:text="Band"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFF66" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="272dp"
        android:layout_y="47dp"
        android:text="40m"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFF66" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="2dp"
        android:layout_y="44dp"
        android:text="10m"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFF66" />

    <SeekBar
        android:id="@+id/SeekBarMiddleTuner"
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="150dp"
        android:minHeight="40dp" />

    <TextView
        android:id="@+id/MiddleText"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_x="122dp"
        android:layout_y="126dp"
        android:text="Tune"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFF66" />

    <Button
        android:id="@+id/maxTuning"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:layout_x="236dp"
        android:layout_y="274dp"
        android:onClick="handleMaxTuning"
        android:text="MAX" />

    <Button
        android:id="@+id/minTuning"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:layout_x="2dp"
        android:layout_y="274dp"
        android:onClick="handleMinTuning"
        android:text="MIN" />

    <Button
        android:id="@+id/button1"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_x="118dp"
        android:layout_y="275dp"
        android:onClick="handleCenterTuning"
        android:text="Center" />

    <TextView
        android:id="@+id/MadeByText"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_x="80dp"
        android:layout_y="391dp"
        android:text="Powered by PU2CLR, Ricardo"
        android:textColor="#FFFF66"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/editPosition"
        android:layout_width="37dp"
        android:layout_height="wrap_content"
        android:layout_x="17dp"
        android:layout_y="358dp"
        android:ems="10"
        android:visibility="invisible">

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/blueSetup"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_x="215dp"
        android:layout_y="334dp"
        android:onClick="handleBlueSetup"
        android:text="Bluetooth..."
        tools:layout_editor_absoluteX="129dp"
        tools:layout_editor_absoluteY="364dp" />

    <CheckBox
        android:id="@+id/twoCapacitors"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:layout_x="6dp"
        android:layout_y="334dp"
        android:text="Two Capacitors"
        android:onClick="onTwoCapacitorsClicked"
        android:textSize="8sp"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="489dp"/>

</AbsoluteLayout>